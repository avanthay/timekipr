{# override FOSUserBundle:Secuity:login.html.twig #}
{% extends "AppBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@AppBundle/Resources/public/css/login.sass' filter="sass" %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <div class="container">
        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">

            <div class="row">
                <div class="tk-logo col-xs-offset-2 col-xs-8">
                    {% image '@AppBundle/Resources/public/img/timekipr.png' %}
                    <img class="image-responsive center-block" src="{{ asset_url }}" alt="logo timekipr">
                    {% endimage %}
                </div>
            </div>

            <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

                    <div class="col-sm-8">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                    <div class="col-sm-8">
                        <input class="form-control" type="password" id="password" name="_password" required="required"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
