<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block documentTitle %}timekipr{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-custom.css') }}">
        <link rel="stylesheet" href="{{ asset('css/timekipr.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}"/>
</head>

<body>
<div class="container">
    {% set alertSnippet %}
        <div class="alert alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="{{ 'label.close'|trans }}"><span aria-hidden="true">&times;</span></button>
            <span class="tk-alert-text"></span>
        </div>
    {% endset %}
    <div id="tk-alert-container" class="container" data-tk-alert="{{ alertSnippet|e }}"></div>
    {% block beforeBody %}{% endblock %}
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery-2.1.4.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/translator.js') }}"></script>
    <script src="{{ asset('js/translations/messages.de.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>
